<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <!--进度条时长-->
    <TextView
        android:id="@+id/tv_player_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="00:01/00:30"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <!--播放进度-->

    <SeekBar
        android:id="@+id/adudio_player_seekbar"
        style="@android:style/Widget.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:progress="50"
        android:progressDrawable="@drawable/aduio_progress_layer_list"
        android:thumb="@drawable/audio_seek_thumb"
        android:thumbOffset="0dp" />


    <!--功能按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_audioplayer_playermode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/audio_playermode_repeat_selector" />

        <ImageView
            android:id="@+id/iv_audioplayer_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/audio_pre_selector" />

        <ImageView
            android:id="@+id/iv_audio_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/audio_pause_selector" />

        <ImageView
            android:id="@+id/iv_audioPlayer_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/audio_next_selector" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/audio_playerlist_selector" />

    </LinearLayout>

</LinearLayout>